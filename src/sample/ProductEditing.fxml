<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox BorderPane.alignment="TOP_LEFT" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="page-title" text="Edit Product">
        <VBox.margin>
            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
        </VBox.margin>
    </Text>
    <FlowPane prefWidth="200.0">
        <Button mnemonicParsing="false" onAction="#handleBackBtnAction" text="Back">
            <FlowPane.margin>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
            </FlowPane.margin>
        </Button>
        <Button mnemonicParsing="false" onAction="#handleSaveBtnAction" text="Save">
            <FlowPane.margin>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
            </FlowPane.margin>
        </Button>
    </FlowPane>
    <GridPane>

        <Label text="Product ID" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
            </GridPane.margin>
        </Label>
        <Label text="Name" GridPane.rowIndex="2">
            <GridPane.margin>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
            </GridPane.margin>
        </Label>
        <Label text="Category" GridPane.rowIndex="3">
            <GridPane.margin>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
            </GridPane.margin>
        </Label>
        <Label text="Price" GridPane.rowIndex="4">
            <GridPane.margin>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
            </GridPane.margin>
        </Label>
        <Label text="Picture" GridPane.rowIndex="5">
            <GridPane.margin>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
            </GridPane.margin>
        </Label>
        <Label text="Status" GridPane.rowIndex="8">
            <GridPane.margin>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
            </GridPane.margin>
        </Label>
        <Region prefHeight="10.0" prefWidth="0.0" GridPane.rowIndex="11" />

        <VBox GridPane.columnIndex="1">
            <TextField fx:id="productPicInput" visible="false" />
        </VBox>
        <Text fx:id="productIdTxt" strokeType="OUTSIDE" strokeWidth="0.0" text="Text" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
            </GridPane.margin>
        </Text>
        <TextField fx:id="productNameInput" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <GridPane.margin>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
            </GridPane.margin>
        </TextField>
        <ChoiceBox fx:id="categoryInput" prefWidth="150.0" value="Fruits" GridPane.columnIndex="1" GridPane.rowIndex="3">
            <String fx:value="Fruits"/>
            <String fx:value="Vegetables"/>
            <String fx:value="Dairy Products"/>
            <String fx:value="Cereals"/>
            <GridPane.margin>
            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
         </GridPane.margin></ChoiceBox>
        <TextField fx:id="priceInput" GridPane.columnIndex="1" GridPane.rowIndex="4">
            <GridPane.margin>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
            </GridPane.margin>
        </TextField>
        <ChoiceBox fx:id="statusInput" prefWidth="150.0" value="Available" GridPane.columnIndex="1" GridPane.rowIndex="8">
            <String fx:value="Available" />
            <String fx:value="Disabled" />
            <GridPane.margin>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
            </GridPane.margin>
        </ChoiceBox>
        <ImageView fx:id="productPicView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="1" GridPane.rowIndex="5">
            <GridPane.margin>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
            </GridPane.margin>
        </ImageView>
        <Button mnemonicParsing="false" onAction="#handleChooseBtnAction" text="Choose" GridPane.columnIndex="1" GridPane.rowIndex="7">
            <GridPane.margin>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
            </GridPane.margin>
        </Button>
    </GridPane>
</VBox>
